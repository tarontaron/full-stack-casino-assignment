generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PLAYER
  OPERATOR
}

enum TransactionType {
  BET
  DEPOSIT
  WITHDRAWAL
  WIN
}

enum TransactionOutcome {
  WIN
  LOSS
}

model User {
  id Int @id @default(autoincrement())

  role Role @default(PLAYER)
  email String @unique
  password_hash String

  first_name String
  last_name String

  bets Bet[]
  wallet Wallet?

  deleted_at DateTime?
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())

  @@map("users")
  @@index([role])
}

model Wallet {
  id Int @id @default(autoincrement())
  balance Decimal @db.Decimal(15,2) @default(1000.00)

  user_id Int @unique
  user User @relation(fields: [user_id], references: [id])

  transactions Transaction[]

  deleted_at DateTime?
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())

  @@map("wallets")
}

model Transaction {
  id Int @id @default(autoincrement())

  amount Decimal @db.Decimal(15,2)
  type TransactionType
  outcome TransactionOutcome?

  wallet_id Int
  wallet Wallet @relation(fields: [wallet_id], references: [id])

  bet_id Int?
  bet Bet? @relation(fields: [bet_id], references: [id])

  deleted_at DateTime?
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())

  @@map("transactions")
  @@index([wallet_id])
  @@index([bet_id])
}

model Game {
  id Int @id @default(autoincrement())

  name String
  rtp Decimal @db.Decimal(5, 2)

  bets Bet[]

  deleted_at DateTime?
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())

  @@map("games")
}

model Bet {
  id Int @id @default(autoincrement())

  amount Decimal @db.Decimal(15,2)

  user_id Int
  user User @relation(fields: [user_id], references: [id])

  game_id Int
  game Game @relation(fields: [game_id], references: [id])

  transactions Transaction[]

  deleted_at DateTime?
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())

  @@map("bets")
  @@index([user_id])
  @@index([game_id])
}
